{% extends 'MirrorAdmBundle:Base:base.html.twig' %}
{% block javascript %}
    <script src="{{ asset('/bundles/mirroradm/js/hpv.js') }}"></script>
{% endblock %}
{% block typeForm %}
        <div class="form-group col-md-8">
            <!-- /.row -->
            <div class="row margin_top">
                <label for="orderNo" class="col-md-1 control-label" style="width: 10%">订单号：</label>
                <div class="col-md-2">
                    <input type="text" class="form-control for_search" id="orderNo">
                </div>
            </div>
            <!-- /.row -->

        </div>
        <div class="form-group col-md-3">
            <div class="row">
                <div class="col-md-3 col-md-offset-9">
                    <button type="reset" class="btn btn-default resetButton">重置</button>
                </div>
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-md-3 col-md-offset-9 margin_top">
                    <button id="search" class="btn btn-default resetButton">搜索</button>
                </div>
            </div>
            <!-- /.row -->

        </div>
{% endblock %}
{% block thead %}
    <tr class="tableTit">
        <td>订单号</td>
        <td>商品名称</td>
        <td>用户</td>
        <td>价格</td>
        <td>数量</td>
        <td>支付时间</td>
        <td>用户名称</td>
        <td>用户年龄</td>
        <td>用户婚姻</td>
        <td>订单状态</td>
        <td colspan="3" width="18%">操作</td>
    </tr>
{% endblock %}
 {% block tbody %}
     {#表格内容区#}
 {% endblock %}
 {% block page %}
     <div class="row">
         <div class="col-md-11 col-md-offset-1">
             <p class="listInfo">显示第 1-10项结果，共<span id="countNumber">0</span> 项</p>
         </div>
         <!-- /.col-md-5 col-md-offset-1 -->
         <div class="col-md-6 col-md-offset-3 text-center">
             <div class="page_list">
                 <ul id="pagination">
                     <span class="prev_page">上一页</span><li class="on">1</li><li>2</li><li>3</li><li>4</li><li>5</li><li>6</li><span class="next_page">下一页</span>
                 </ul>
             </div>
         </div>
         <!-- /.col-md-6 col-md-offset-3 -->
     </div>
     <!-- /.row -->
 {% endblock %}
{% block otherJs %}
    <script>
        $(function(){
            adminTabNav($('.adminLeftNav .hpv'));
            var page={{ page }};

            $('.for_search').keydown(function (event) {
                if (event.keyCode == 13) {
                    var info={};
                    info.orderNo=$('#orderNo').val();
                    goodsList(page,info);
                }
            });

            $('#search').click(function(){
                var info={};
                info.orderNo=$('#orderNo').val();
                goodsList(page,info);
                return false;
            });

            $('button[type=reset]').click(function(){
                goodsList(page);
            });
            goodsList(page);
        });
    </script>

{% endblock %}