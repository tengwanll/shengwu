{% extends 'MirrorAdmBundle:Base:base.html.twig' %}
{% block javascript %}
    <script src="{{ asset('/bundles/mirroradm/js/goods.js') }}"></script>
{% endblock %}
{% block typeForm %}
    <form class="form-horizontal" role="form">
        <div class="form-group col-md-8">
            <!-- /.row -->
            <div class="row margin_top">
                <label for="name" class="col-md-2 control-label">名称：</label>
                <div class="col-md-2">
                    <input type="text" class="form-control" id="name">
                </div>
                <label for="sort" class="col-md-2 control-label">分类：</label>
                <div class="col-md-2">
                    <input type="text" class="form-control" id="sort">
                </div>
                <div style="clear:both"></div>
                <label for="beginTime" class="col-md-2 control-label addressLabel">价格下限：</label>
                <div class="col-md-2">
                    <input type="text" class="form-control" id="smallPrice">
                </div>
                <label for="endTime" class="col-md-2 control-label addressLabel">价格上限：</label>
                <div class="col-md-2">
                    <input type="text" class="form-control" id="bigPrice">
                </div>

            </div>
            <!-- /.row -->

        </div>
        <div class="form-group col-md-3">
            <div class="row">
                <div class="col-md-3 col-md-offset-9">
                    <button type="reset" class="btn btn-default resetButton">重置</button>
                </div>
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-md-3 col-md-offset-9 margin_top">
                    <button id="search" class="btn btn-default resetButton">搜索</button>
                </div>
            </div>
            <!-- /.row -->

        </div>
    </form>
{% endblock %}
{% block thead %}
    <tr class="tableTit">
        <td>商品编号</td>
        <td>名称</td>
        <td>分类</td>
        <td>价格</td>
        <td>图片</td>
        <td colspan="3" width="18%">操作</td>
    </tr>
{% endblock %}
 {% block tbody %}
     {#表格内容区#}
 {% endblock %}
 {% block page %}
     <div class="row">
         <div class="col-md-11 col-md-offset-1">
             <p class="listInfo">显示第 1-10项结果，共 10 项</p>
         </div>
         <!-- /.col-md-5 col-md-offset-1 -->
         <div class="col-md-6 col-md-offset-3 text-center">
             <div class="page_list">
                 <ul id="pagination">
                     <span class="prev_page">上一页</span><li class="on">1</li><li>2</li><li>3</li><li>4</li><li>5</li><li>6</li><span class="next_page">下一页</span>
                 </ul>
             </div>
         </div>
         <!-- /.col-md-6 col-md-offset-3 -->
     </div>
     <!-- /.row -->
 {% endblock %}
{% block otherJs %}
    <script>
        $(function(){
            adminTabNav($('.adminLeftNav .goods'));
            goodsList();
        });
    </script>

{% endblock %}