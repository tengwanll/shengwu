{% extends 'MirrorAdmBundle:Base:base.html.twig' %}
{% block javascript %}
    <script src="{{ asset('/bundles/mirroradm/js/biology.js') }}"></script>
{% endblock %}
{% block typeForm %}
        <div class="form-group col-md-8">
            <!-- /.row -->
            <div class="row margin_top">
                <label for="name" class="col-md-2 control-label">中文名称：</label>
                <div class="col-md-2">
                    <input type="text" class="form-control for_search" id="name">
                </div>
                <label for="englishName" class="col-md-2 control-label">拉丁名称：</label>
                <div class="col-md-2">
                    <input type="text" class="form-control for_search" id="englishName">
                </div>
            </div>

            <!-- /.row -->
            <div class="row margin_top">
                <div class="col-md-3">
                    <a class="btn btn-default resetButton userAdd" href="/biology.xlsx">下载导入模板</a>
                </div>
                <div class="col-md-3">
                    <a class="btn btn-default resetButton userAdd" href="/adm/biology/add">添加</a>
                </div>
            </div>



        </div>
        <div class="form-group col-md-3">
            <div class="row">
                <div class="col-md-3 col-md-offset-9">
                    <label for="file" class="btn btn-default resetButton" style="max-width: 150px;margin-left: 0;">导入数据</label>
                    <form action="" name="uploadForm">
                    <input type="file" id="file" style="display: none" name="file">
                    </form>
                </div>
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-md-3 col-md-offset-9 margin_top">
                    <button id="search" class="btn btn-default resetButton">搜 索</button>
                </div>
            </div>
            <!-- /.row -->

        </div>
{% endblock %}
{% block thead %}
    <tr class="tableTit">
        <td>编号</td>
        <td>拉丁名称</td>
        <td>中文名称</td>
        <td>微生物类别</td>
        <td>菌种种类</td>
        <td>检测基因</td>
        <td>毒力基因</td>
        <td>文献</td>
        <td>引发病症</td>
        <td colspan="3" width="18%">操作</td>
    </tr>
{% endblock %}
 {% block tbody %}
     {#表格内容区#}
 {% endblock %}
 {% block page %}
     <div class="row">
         <div class="col-md-11 col-md-offset-1">
             <p class="listInfo">显示第 1-10项结果，共 <span id="countNumber">0</span> 项</p>
         </div>
         <!-- /.col-md-5 col-md-offset-1 -->
         <div class="col-md-6 col-md-offset-3 text-center">
             <div class="page_list">
                 <ul id="pagination">
                     <span class="prev_page">上一页</span><li class="on">1</li><li>2</li><li>3</li><li>4</li><li>5</li><li>6</li><span class="next_page">下一页</span>
                 </ul>
             </div>
         </div>
         <!-- /.col-md-6 col-md-offset-3 -->
     </div>
     <!-- /.row -->
 {% endblock %}
{% block otherJs %}
    <script>
        $(function(){
            adminTabNav($('.adminLeftNav .biology'));
            biologyList();
        });
    </script>

{% endblock %}